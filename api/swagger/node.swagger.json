        },
        "useApplicationSettings": {
          "type": "boolean",
          "format": "boolean",
          "description": "When set to true, the application settings will be used to populate the node network settings."
        }
      }
    },
    "apiUpdateNodeResponse": {
      "type": "object"
    }
  }
