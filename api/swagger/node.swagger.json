      "type": "object",
      "properties": {
        "channel": {
          "type": "integer",
          "format": "int32",
          "description": "Channel number on which the frame was received."
        },
        "codeRate": {
          "type": "string",
          "description": "Code-rate."
        },
        "frequency": {
          "type": "string",
          "format": "int64",
          "description": "frequency."
        },
        "loRaSNR": {
          "type": "number",
          "format": "double",
          "description": "LoRa SNR."
        },
        "rssi": {
          "type": "integer",
          "format": "int32",
          "description": "RSSI / signal strength."
        },
        "time": {
          "type": "string",
