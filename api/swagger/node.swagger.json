        "rx2DR": {
          "type": "integer",
          "format": "int64",
          "description": "Data-rate to use for RX2."
        },
        "name": {
          "type": "string",
          "title": "Name of the node (note that renaming the node affects its api endpoint)"
        },
        "relaxFCnt": {
          "type": "boolean",
          "format": "boolean",
          "description": "Relax frame-counter mode is enabled."
