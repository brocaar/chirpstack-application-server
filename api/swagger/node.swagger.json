    "apiUpdateNodeRequest": {
      "type": "object",
      "properties": {
        "devEUI": {
          "type": "string",
          "description": "Hex encoded DevEUI of the node to update."
        },
        "appEUI": {
          "type": "string",
          "description": "Hex encoded AppEUI."
        },
        "appKey": {
          "type": "string",
          "description": "Hex encoded AppKey."
        },
        "rxDelay": {
          "type": "integer",
          "format": "int64",
